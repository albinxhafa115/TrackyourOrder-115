# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kuosht_tracking
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=8h

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@kuosht.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+38344xxxxxx

# Maps API (Optional - for ETA calculation)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://kuosht.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Tracking Settings
GPS_UPDATE_RETENTION_HOURS=24
GPS_UPDATE_INTERVAL_MS=30000
